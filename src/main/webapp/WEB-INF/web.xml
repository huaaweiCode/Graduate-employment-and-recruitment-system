<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
<filter>
    <filter-name>JFinalFilter</filter-name>//名字随便起，最好是有意义的
    <filter-class>com.jfinal.core.JFinalFilter</filter-class>//固定的写法

    <init-param>
        <param-name>configClass</param-name>
        <param-value>common.MainConfig</param-value>
    </init-param>
</filter>


    <filter-mapping>
        <filter-name>JFinalFilter</filter-name>
        <url-pattern>/*</url-pattern>//表示服务器上的所有请求都让这个过滤器完成
    </filter-mapping>

</web-app>
